{
  "manifest_version": 3,
  "name": "LXD Browser Extension REACT version",
  "description": "Shortcuts including search by code.",
  "version": "0.1",
  "action": {
    "default_title" : "LDX Tools LDX",
    "default_popup": "js/index.html"
  },
 "commands" : {
      "_execute_action": {
          "suggested_key": "Shift+Alt+F",
          "mac": "Shift+Option+F"
      }
  },
  "background" : {
      "service_worker": "./static/background.js",
      "type" : "module"
  },
  "web_accessible_resources": [{
     "matches": ["<all_urls>"],
     "resources": ["src/modules/canvas_course.mjs"]
   }],
  "content_scripts" : [
    {
      "matches" : ["*://*.instructure.com/**"],
      "js": ["/.static/js/content.js"]

    },
    {
      "matches" : ["*://*.instructure.com/courses/**"],
      "js" : ["src/page_fixes.js"],
      "run_at" : "document_end"
    },
    {
      "matches" : ["*://*.instructure.com/courses/*/modules"],
      "js" : ["src/module_ui.js"],
      "run_at" : "document_end"
    },
    {
      "matches" : ["*://*.instructure.com/courses/**"],
      "js" : ["src/course_ui.js"],
      "run_at" : "document_end"
    },
    {
      "matches" : ["*://*.instructure.com/accounts/*"],
      "js" : ["src/account_ui.js"],
      "run_at" : "document_end"
    }
  ],

  "permissions" : ["activeTab", "scripting", "storage"]
}