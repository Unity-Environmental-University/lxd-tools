{
  "manifest_version": 3,
  "name": "LXD Browser Extension",
  "description": "Extension for LXD team",
  "browser_specific_settings": {
    "gecko": {
      "id": "lxd-extension@unity.edu",
      "data_collection_permissions":{
        "required":["none"]
      },
      "strict_min_version": "128.0",
      "update_url": "https://raw.githubusercontent.com/Unity-Environmental-University/lxd-tools-build/refs/heads/stable/update.json"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "LXD Tools"
  },
  "icons": {
    "16": "img/lxdLogo16.png",
    "48": "img/lxdLogo48.png",
    "128": "img/lxdLogo128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Shift+Alt+F"
      },
      "description": "Activate the extension"
    }
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module",
    "scripts": ["js/background.js"]
  },
  "web_accessible_resources": [
    {
      "matches": [
        "*://*.instructure.com/*"
      ],
      "resources": [
        "js/reporting.js.map",
        "js/pageFixes.js.map",
        "js/speedGrader.js.map",
        "js/publish.js.map",
        "js/rubricOrganize.js.map",
        "js/ui/module.js.map",
        "js/ui/course.js.map",
        "js/ui/account.js.map",
        "js/ui/syllabus.js.map"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.instructure.com/courses/**"
      ],
      "js": [
        "js/pageFixes.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://*.instructure.com/courses/*/gradebook/speed_grader?*"
      ],
      "js": [
        "js/speedGrader.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://*.instructure.com/**/settings",
        "*://*.instructure.com/**/details"
      ],
      "js": [
        "js/publish.js"
      ]
    },
    {
      "matches": [
        "*://*.instructure.com/courses/*/modules"
      ],
      "js": [
        "js/ui/module.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://*.instructure.com/courses/**"
      ],
      "js": [
        "js/ui/course.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://*.instructure.com/accounts/*"
      ],
      "js": [
        "js/ui/account.js",
        "js/reporting.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://*.instructure.com/courses/*/rubrics/*"
      ],
      "js": [
        "js/rubricOrganize.js"
      ],
      "run_at":"document_end"
    },
    {
      "matches": [
        "*://*.instructure.com/courses/*/assignments/syllabus"
      ],
      "js": [
        "js/ui/syllabus.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "*://*.inscloudgate.com/*",
    "*://*.canvas-user-content.com/*",
    "*://*.instructure.com/*"
  ],
  "optional_host_permissions": [],
  "version": "1.0.0"
}